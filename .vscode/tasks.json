{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "shell",
			"label": "build",
			"command": "make",
			"args": [
				"all",
				"-s",
				"-j6",
			],
			"options": {
				"cwd": "${workspaceFolder}\\${config:buildFolder}",
			},
			"problemMatcher": {
				"base": "$gcc",
				"fileLocation": [
					"relative",
					"${workspaceFolder}\\dummy"
				]
			}
		},
		{
			"type": "shell",
			"label": "clean",
			"command": "make",
			"args": [
				"clean",
				"-s"
			],
			"options": {
				"cwd": "${workspaceFolder}\\${config:buildFolder}"
			},
			"problemMatcher": {
				"base": "$gcc",
				"fileLocation": [
					"relative",
					"${workspaceFolder}\\dummy"
				]
			}
		},
		{
			"type": "shell",
			"label": "clean & build",
			"command": "make",
			"args": [
				"all",
				"-s",
				"-j6",
			],
			"dependsOn": "clean",
			"options": {
				"cwd": "${workspaceFolder}\\${config:buildFolder}"
			},
			"problemMatcher": {
				"base": "$gcc",
				"fileLocation": [
					"relative",
					"${workspaceFolder}\\dummy"
				]
			}
		}
	]
}